#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include "Biblioteca.h"
#include "Input.h"

int main(void){
	setbuf(stdout, NULL);

	int array[5] = {76, 52, 7, 6, 5};
	int* pArray;

	pArray = array;

	for(int i = 0; i < 5; i++){
		printf("%d\n", *pArray+i);
	}					//Toma el primer valor y le suma i

	for(int i = 0; i < 5; i++){
		printf("%d\n", *(pArray+i));
	}					//Muestra los valores en cada posición

	for(int i = 0; i < 5; i++){
		printf("%d\n", pArray[i]);
	}				//Es lo mismo que el anterior, pero es más simple

	return 0;
}
