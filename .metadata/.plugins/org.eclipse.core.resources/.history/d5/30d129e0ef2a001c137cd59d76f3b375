#ifndef PRODUCTOS_H_
#define PRODUCTOS_H_
#include <stdio.h>
#include <stdlib.h>

#define EMPTY 0
#define FULL 1

typedef struct{
	int idProducto;
	char descripcion[51];
	int nacionalidad;
	int tipo;
	float precio;
	int estado;
}sProduct;

int initProduct(sProduct* list, int len);
sProduct getProduct();
int addProduct(sProduct* list, int len);
int findProductById(sProduct* list, int len, int id);
int removeProduct(sProduct* list, int len);


#endif /* PRODUCTOS_H_ */
